<div class="panel-heading">
    <div class="search">
        <Input
            data-test-field={{t "layout.authors.index.search-by-author-name"}}
            @type="text"
            @value={{this.search}}
            @placeholder={{t "layout.authors.index.search-by-author-name"}}
        />
    </div>

    <LinkTo
        data-test-link={{t "layout.authors.index.add-author"}}
        @class="btn-new"
        @route="authors.create"
    >
        <div class="sr-only">{{t "layout.authors.index.add-author"}}</div>
    </LinkTo>
</div>

<div class="panel-content">
    <h3 class="panel-title">{{t "layout.authors.index.authors"}}</h3>

    <ul class="collection">
        {{#each this.model as |author|}}
            <li>
                <LinkTo
                    data-test-link="{{author.lastName}}, {{author.firstName}}"
                    @route="authors.details"
                    @model={{author.id}}
                >
                    <strong>{{author.lastName}}</strong>, {{author.firstName}}
                </LinkTo>
            </li>
        {{/each}}
    </ul>
</div>

{{outlet}}