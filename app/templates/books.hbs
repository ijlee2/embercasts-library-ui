<div class="panel-heading">
    <div class="search">
        <Input
            data-test-field={{t "layout.books.index.search-by-title-or-isbn"}}
            @type="text"
            @value={{this.search}}
            @placeholder={{t "layout.books.index.search-by-title-or-isbn"}}
        />
    </div>

    <LinkTo
        data-test-link={{t "layout.books.index.add-book"}}
        @class="btn-new"
        @route="books.create"
    >
        <div class="sr-only">{{t "layout.books.index.add-book"}}</div>
    </LinkTo>
</div>

<div class="panel-content">
    <h3 class="panel-title">{{t "layout.books.index.books"}}</h3>

    <ul class="collection">
        {{#each this.model as |book|}}
            <li>
                <LinkTo
                    data-test-link={{book.title}}
                    @route="books.details"
                    @model={{book.id}}
                >
                    <span class="book-title">{{book.title}}</span>
                    <em class="book-isbn">{{book.isbn}}</em>
                </LinkTo>
            </li>
        {{/each}}
    </ul>
</div>

{{outlet}}